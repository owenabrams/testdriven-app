# Staging Dockerfile
FROM python:3.11-slim

# Set working directory
WORKDIR /usr/src/app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=staging
ENV APP_SETTINGS=project.config.ProductionConfig
ENV DATABASE_URL=postgresql://user:pass@db:5432/testdriven_staging

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        postgresql-client \
        build-essential \
        libpq-dev \
        netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project
COPY . .

# Copy and set permissions for entrypoint
COPY entrypoint-stage.sh /usr/src/app/entrypoint-stage.sh
RUN chmod +x /usr/src/app/entrypoint-stage.sh

# Create non-root user
RUN adduser --disabled-password --gecos '' app
RUN chown -R app:app /usr/src/app
USER app

# Expose port
EXPOSE 5000

# Use staging entrypoint script
ENTRYPOINT ["/usr/src/app/entrypoint-stage.sh"]
