{
  "containerDefinitions": [
    {
      "name": "client",
      "image": "%s.dkr.ecr.us-east-1.amazonaws.com/testdriven-frontend:production",
      "essential": true,
      "memory": 300,
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "testdriven-client-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "family": "testdriven-client-production-td",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::%s:role/testdriven-production-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::%s:role/testdriven-production-ecs-task-role"
}
