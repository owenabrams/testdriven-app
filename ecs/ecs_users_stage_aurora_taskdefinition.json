{
  "containerDefinitions": [
    {
      "name": "users",
      "image": "%s.dkr.ecr.us-east-1.amazonaws.com/testdriven-backend:staging",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 5000
        }
      ],
      "environment": [
        {
          "name": "APP_SETTINGS",
          "value": "project.config.StagingConfig"
        },
        {
          "name": "FLASK_ENV",
          "value": "staging"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://webapp:%s@testdriven-production-aurora.cluster-copao2ykcikc.us-east-1.rds.amazonaws.com:5432/users_staging"
        },
        {
          "name": "SECRET_KEY",
          "value": "%s"
        },
        {
          "name": "AURORA_DB_PASSWORD",
          "value": "%s"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/testdriven-users-staging",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5000/ping || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "stopTimeout": 30
    }
  ],
  "family": "testdriven-users-staging-aurora-td",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::%s:role/testdriven-staging-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::%s:role/testdriven-staging-ecs-task-role"
}
